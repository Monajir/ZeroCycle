@model SmartWaste.Web.Models.DriverLogPickupVm
@{
    ViewData["Title"] = "Log Pickup";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}

<div class="card-soft p-3" style="max-width:650px;">
    <div style="font-weight:900; font-size:18px;">Log Pickup</div>
    <div style="color:#64748b;">Stop: @Model.BinLocation</div>

    <form method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="RouteStopId" />
        <input type="hidden" asp-for="RouteId" />
        <input type="hidden" asp-for="BinLocation" />

        <div class="mb-3">
            <label class="form-label" style="font-weight:700;">Collected Volume (Liters)</label>
            <input class="form-control" asp-for="VolumeCollectedLiters" placeholder="e.g. 30" />
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary btn-soft" type="submit"><i class="bi bi-save"></i> Save</button>
            <a class="btn btn-outline-secondary btn-soft" href="/Driver/Routes/Map/@Model.RouteId">Cancel</a>
        </div>
    </form>
</div>
