@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Route Management";
}

<div class="container-fluid py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-1">Route Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Routes</li>
                </ol>
            </nav>
        </div>
        <a class="btn btn-primary px-4 shadow-sm" href="/Admin/Routes/Plan">
            <i class="bi bi-plus-lg me-2"></i> Plan New Route
        </a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 border-start border-primary border-4">
                <div class="text-muted small fw-bold">TOTAL ROUTES</div>
                <div class="h4 fw-bold mb-0">@Model.Count()</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 border-start border-warning border-4">
                <div class="text-muted small fw-bold">IN PROGRESS</div>
                <div class="h4 fw-bold mb-0">@Model.Count(x => x.RouteStatus == "In Progress")</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 border-start border-success border-4">
                <div class="text-muted small fw-bold">COMPLETED TODAY</div>
                <div class="h4 fw-bold mb-0">@Model.Count(x => x.RouteStatus == "Completed")</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 border-start border-info border-4">
                <div class="text-muted small fw-bold">AVG STOPS</div>
                <div class="h4 fw-bold mb-0">14.5</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm p-4 sticky-top" style="top: 20px;">
                <h5 class="fw-bold mb-3">Quick Filters</h5>
                <form>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Status</label>
                        <select class="form-select border-light bg-light">
                            <option>All Statuses</option>
                            <option>Pending</option>
                            <option>In Progress</option>
                            <option>Completed</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Truck / Driver</label>
                        <input type="text" class="form-control border-light bg-light" placeholder="Search...">
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Date Range</label>
                        <input type="date" class="form-control border-light bg-light mb-2">
                        <input type="date" class="form-control border-light bg-light">
                    </div>
                    <button class="btn btn-dark w-100">Apply Filters</button>
                    <button type="reset" class="btn btn-link btn-sm w-100 mt-2 text-decoration-none text-muted">Clear All</button>
                </form>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="table-responsive">
                    <table class="table align-middle mb-0 table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 border-0 py-3 text-uppercase small fw-bold">ID</th>
                                <th class="border-0 py-3 text-uppercase small fw-bold">Date</th>
                                <th class="border-0 py-3 text-uppercase small fw-bold">Truck & Driver</th>
                                <th class="border-0 py-3 text-uppercase small fw-bold">Status</th>
                                <th class="border-0 py-3 text-uppercase small fw-bold text-center">Stops</th>
                                <th class="pe-4 border-0 py-3 text-uppercase small fw-bold text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@r.RouteId</td>
                                    <td>@(((DateTime)r.RouteDate).ToString("MMM dd, yyyy"))</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-2 bg-light rounded text-center" style="width:32px; height:32px; line-height:32px;">
                                                <i class="bi bi-truck"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold mb-0" style="font-size: 0.9rem;">@r.RegistrationNo</div>
                                                <div class="text-muted small">@r.DriverName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (r.RouteStatus == "Completed")
                                        {
                                            <span class="badge rounded-pill bg-success-soft text-success px-3">@r.RouteStatus</span>
                                        }
                                        else if (r.RouteStatus == "In Progress")
                                        {
                                            <span class="badge rounded-pill bg-warning-soft text-warning px-3">@r.RouteStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-secondary-soft text-secondary px-3">@r.RouteStatus</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold">@r.TotalStops</span>
                                    </td>
                                    <td class="pe-4 text-end">
                                        <a class="btn btn-outline-secondary btn-sm rounded-pill px-3" href="/Admin/Routes/Map/@r.RouteId">
                                            <i class="bi bi-map me-1"></i> View Map
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Styling for "Soft" badges for a modern look */
    .bg-success-soft {
        background-color: #e1fcef;
        color: #00d084;
    }

    .bg-warning-soft {
        background-color: #fff8e6;
        color: #ffb900;
    }

    .bg-secondary-soft {
        background-color: #f8f9fa;
        color: #6c757d;
    }

    .table thead th {
        font-size: 0.75rem;
        letter-spacing: 0.05rem;
        color: #6c757d;
    }

    .table tbody td {
        padding: 1rem 0.5rem;
    }

    .avatar-sm {
        display: inline-block;
        background: #f0f2f5;
        color: #495057;
        border-radius: 4px;
    }
</style>