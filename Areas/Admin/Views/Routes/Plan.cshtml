@model dynamic
@{
    ViewData["Title"] = "Plan Route";
    var zones = (List<(string Value, string Text)>)ViewBag.Zones;
    var trucks = (List<(string Value, string Text)>)ViewBag.Trucks;
    var drivers = (List<(string Value, string Text)>)ViewBag.Drivers;
    DateTime today = (DateTime)ViewBag.Today;
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <a href="/Admin/Routes" class="text-decoration-none small text-muted">
            <i class="bi bi-arrow-left"></i> Back to Route List
        </a>
        <h2 class="fw-bold mt-2">Plan New Collection Route</h2>
        <p class="text-muted">Configure parameters to auto-generate an optimized pickup path.</p>
    </div>

    <div class="row g-4">
        <div class="col-xl-5 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-4">Route Parameters</h5>

                    <form method="post" action="/Admin/Routes/Plan">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Target Zone</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-geo"></i></span>
                                    <select class="form-select border-start-0" name="zoneId" required>
                                        @foreach (var z in zones)
                                        {
                                            <option value="@z.Value">@z.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Scheduled Date</label>
                                <input class="form-control" type="date" name="routeDate" value="@today.ToString("yyyy-MM-dd")" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Assign Truck</label>
                                <select class="form-select" name="truckId" required>
                                    @foreach (var t in trucks)
                                    {
                                        <option value="@t.Value">@t.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Assign Driver</label>
                                <select class="form-select" name="driverId" required>
                                    @foreach (var d in drivers)
                                    {
                                        <option value="@d.Value">@d.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-12">
                                <div class="p-3 bg-light rounded-3">
                                    <label class="form-label fw-semibold">Optimization Logic: Min Fill Level</label>
                                    <div class="d-flex align-items-center gap-3">
                                        <input class="form-range" type="range" name="minFillPercent" id="fillRange" value="70" min="0" max="100" oninput="this.nextElementSibling.value = this.value + '%'">
                                        <output class="fw-bold text-primary" style="min-width: 45px;">70%</output>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        Only bins at or above this capacity will be added to the route to maximize efficiency.
                                    </small>
                                </div>
                            </div>

                            <div class="col-md-12 mt-4">
                                <button class="btn btn-primary btn-lg w-100 shadow-sm" type="submit">
                                    <i class="bi bi-magic me-2"></i> Generate Optimized Route
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-xl-7 col-lg-6">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card border-0 bg-primary text-white shadow-sm overflow-hidden">
                        <div class="card-body p-4 position-relative">
                            <div class="position-relative" style="z-index: 2;">
                                <h5 class="fw-bold">How Routing Works</h5>
                                <p class="mb-0 opacity-75">Our algorithm calculates the shortest path between all sensors reporting a high fill level. This reduces fuel consumption and wear on vehicles.</p>
                            </div>
                            <i class="bi bi-cpu position-absolute end-0 bottom-0 m-n3 opacity-25" style="font-size: 8rem;"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h6 class="fw-bold"><i class="bi bi-info-circle text-info me-2"></i>Zone Selection</h6>
                            <p class="small text-muted">Selecting a zone filters the database for specific geo-fenced containers. Ensure the driver is familiar with the selected area.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <h6 class="fw-bold"><i class="bi bi-lightning-charge text-warning me-2"></i>Pro-Tip</h6>
                            <p class="small text-muted">A 70-80% fill threshold is recommended for standard municipal waste to prevent overflow before the truck arrives.</p>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-sm text-center p-5 bg-light border-dashed">
                        <div class="py-4">
                            <i class="bi bi-map text-muted fs-1"></i>
                            <h6 class="mt-3 text-muted">Map Preview will appear after generation</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-dashed {
        border: 2px dashed #dee2e6 !important;
    }

    .form-range::-webkit-slider-thumb {
        background: #0d6efd;
    }
</style>