<div style="display:flex; align-items:center; gap:12px;">
    <button id="btnSidebar" class="btn btn-outline-secondary btn-soft d-lg-none" type="button">
        <i class="bi bi-list"></i>
    </button>

    <div>
        <div style="font-weight:800;">@ViewData["Title"]</div>
        <div style="font-size:12px; color:#64748b;">
            @DateTime.Now.ToString("dddd, dd MMM yyyy")
        </div>
    </div>
</div>

<div style="display:flex; align-items:center; gap:10px;">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <span class="badge text-bg-light" style="border:1px solid #e5e7eb; border-radius: 12px;">
            <i class="bi bi-person"></i>
            @User.Identity!.Name
        </span>

        <form method="post" action="/Identity/Account/Logout" style="margin:0;">
            <button class="btn btn-primary btn-soft" type="submit">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    }
    else
    {
        <a class="btn btn-primary btn-soft" href="/Identity/Account/Login">
            <i class="bi bi-box-arrow-in-right"></i> Login
        </a>
    }
</div>
