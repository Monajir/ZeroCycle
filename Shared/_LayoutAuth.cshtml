<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartWaste</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body style="background: var(--app-bg);">
    <div class="container" style="max-width: 980px; padding-top: 40px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/" style="text-decoration:none; font-weight:900; color:#0f172a; font-size:18px;">
                <i class="bi bi-recycle"></i> SmartWaste
            </a>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary btn-soft" href="/PublicMap">
                    <i class="bi bi-geo-alt"></i> Public Map
                </a>
                <a class="btn btn-primary btn-soft" href="/">
                    <i class="bi bi-house"></i> Home
                </a>
            </div>
        </div>

        <div class="card-soft p-4">
            @RenderBody()
        </div>

        <div class="text-center mt-3" style="color:#64748b; font-size:13px;">
            SmartWaste © @DateTime.Now.Year
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
