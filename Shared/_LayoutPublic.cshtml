<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartWaste Public</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body style="background: var(--app-bg);">

    <nav class="navbar bg-white border-bottom">
        <div class="container py-1">
            <a class="navbar-brand fw-bold d-flex align-items-center gap-2" href="/PublicMap">
                <span class="icon-badge"><i class="bi bi-recycle"></i></span>
                <span>SmartWaste Public</span>
            </a>

            <div class="d-flex align-items-center gap-2">
                <span class="text-muted d-none d-md-inline" style="font-size:13px;">
                    Live community bin status map
                </span>

                <a class="btn btn-outline-secondary btn-soft" href="/Identity/Account/Login">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
